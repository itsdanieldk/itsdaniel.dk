---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
---

<PageLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <Container>
    <div class="space-y-10 text-center">
      <div class="animate space-y-8">
        <div class="text-9xl font-title font-bold text-black dark:text-white">404</div>
        <h1 class="text-3xl font-title font-semibold text-black dark:text-white">Page Not Found</h1>
        <p class="text-lg">Sorry, the page you're looking for doesn't exist or has been moved.</p>
      </div>

      <div class="animate flex flex-col sm:flex-row gap-4 justify-center">
        <Link href="/" underline={false}>
          <button
            class="px-6 py-3 rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out"
          >
            Go to home
          </button>
        </Link>
        <Link href="/notes" underline={false}>
          <button
            class="px-6 py-3 rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out"
          >
            Browse notes
          </button>
        </Link>
      </div>
    </div>
  </Container>
</PageLayout>
